<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EBF3FA"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="54.28dp"
                android:layout_height="47dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/logo"
                android:innerRadius="0dp" />
            //Главная
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_marginLeft="16dp"
                    android:id="@+id/Main_text"
                    android:layout_width="209dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="121dp"
                    android:text="Надстройка нетривиальна"
                    android:textColor="@color/colorPrimary"
                    android:textSize="27sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="163dp"
                    android:layout_height="87dp"
                    android:layout_marginTop="190dp"
                    android:text="Смысл жизни, следовательно, творит данный внешный мир"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />



                <Button
                    android:layout_marginLeft="16dp"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:padding="13dp"
                    android:layout_marginTop="280dp"
                    android:text="Будь с нами!"
                    android:elevation="10dp"
                    android:textAllCaps="false"
                    android:textColor="@color/whiteColor"
                    android:textSize="20sp"
                    android:clickable="true"/>


                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="400dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="155.36dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="2dp"
                    android:background="@drawable/girl_feed" />
            </RelativeLayout>

            //прокрутка, возрастная категория
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="253dp"
                        android:layout_height="308dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="10dp"
                        app:background="@drawable/category_box">

                        <ImageView
                            android:layout_width="221dp"
                            android:layout_height="186dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="-44dp"
                            android:background="@drawable/dety"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="216dp"
                            android:text="Дети: 3 - 10 лет"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/button1"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginTop="250dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/button_green"
                            android:text="Перейти"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="253dp"
                        android:layout_height="308dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="10dp"
                        app:background="@drawable/category_box">

                        <ImageView
                            android:layout_width="221dp"
                            android:layout_height="186dp"
                            android:background="@drawable/dety"
                            android:layout_gravity="center"
                            android:layout_marginTop="-44dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Дети: 3 - 10 лет"
                            android:layout_marginTop="216dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="16dp"/>

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:text="Перейти"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:textAllCaps="false"
                            android:background="@drawable/button_green"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_marginTop="250dp"


                            />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </HorizontalScrollView>

            //решай проблемы

            <TextView
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:text="Решай проблемы"
                android:textSize="30dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Если у тебя есть проблемы, мы тебе поможем. Даже если ты думаешь что это малейшие и не стоющие внимания ситуации. "
                android:textColor="@color/colorPrimary"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/pic1"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="В связи болезнью"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Все больше выходят новости о китайском коронавирусе, которые делает каждый день тревожнее.

Главное в этой ситуации, заботится о своем здоровье и близких. Каждый день мыть руки, лицо.

Избегать общественные места и стараться питаться из дома.
"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                />

            <Button
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_style"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="13dp"
                android:layout_marginTop="16dp"
                android:text="Будь с нами!"
                android:textAllCaps="false"
                android:textColor="@color/whiteColor"
                android:textSize="20sp"
                android:clickable="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Остальные рассказы"
                android:textSize="16sp"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#8031456A" />

            //меня не понимают
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="200dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="253dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="10dp"
                        android:elevation="20dp"
                        android:layout_marginLeft="16dp"
                        app:cardCornerRadius="10dp"
                        app:background="@drawable/category_box">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Меня не понимают"
                            android:layout_margin="16dp"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/colorPrimary"
                            android:clickable="true"/>


                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="253dp"
                        android:layout_height="200dp"
                        android:layout_marginRight="10dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="10dp"
                        app:background="@drawable/category_box">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Унижают из-за внешности.
Что со мной не так?!"
                            android:layout_margin="16dp"
                            android:textSize="30sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="16dp"
                            android:textColor="@color/colorPrimary"
                            android:clickable="true"/>


                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>

            //больше по тегам
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Больше по тегам"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="25dp"
                android:textColor="#8031456A" />
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="100dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Печаль и депрессия"
                    android:background="@drawable/tag_style"
                    android:padding="15dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Апендикс"
                    android:background="@drawable/tag_style"
                    android:padding="15dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Самоповреждение"
                    android:background="@drawable/tag_style"
                    android:padding="15dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тема"
                    android:background="@drawable/tag_style"
                    android:padding="15dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16dp"
                    android:textColor="@color/colorAccent"
                    />

            </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_margin="16dp"
                android:padding="13dp"
                android:background="@drawable/button_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Больше рассказов"
                android:textColor="@color/whiteColor"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20sp"
                android:elevation="24dp"
                />

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_navigation_menu"
        app:itemIconSize="28dp"
        app:itemIconTint="@drawable/bottom_navigation_colors"
        app:itemTextColor="@drawable/bottom_navigation_colors"
        android:background="#EBF3FA"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
