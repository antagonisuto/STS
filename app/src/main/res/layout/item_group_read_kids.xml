<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/link_waterMarfa"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/readKidTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/title"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/readKidImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_below="@+id/readKidTitle"
                android:layout_marginTop="16dp"
                android:background="@drawable/title"/>

            <TextView
                android:id="@+id/readKidText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="center"
                android:layout_below="@+id/readKidImage"
                android:layout_marginTop="16dp"
                />

            <LinearLayout
                android:id="@+id/readKidButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_below="@+id/readKidText"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/call"
                    android:layout_width="170dp"
                    android:layout_height="44dp"
                    android:background="@drawable/button_green"
                    android:text="Позвони"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:background="@drawable/button_green"
                    android:text="Напиши"
                    android:layout_marginStart="8dp"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>

</LinearLayout>